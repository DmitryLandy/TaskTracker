@model BugTracker.Models.Tasks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid w-50 bg-light">
    <nav class="row navbar navbar-expand navbar-light bg-dark">
        <h1 class="text-light text-uppercase">Create Task</h1>
    </nav>
    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="ProjectID" class="form-control" value="@Context.Request.RouteValues["id"]" />
                </div>
                <div class="form-group">
                    <label asp-for="TaskName" class="control-label"></label>
                    <input asp-for="TaskName" class="form-control" />
                    <span asp-validation-for="TaskName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaskDescription" class="control-label"></label>
                    <textarea asp-for="TaskDescription" class="form-control"></textarea>
                    <span asp-validation-for="TaskDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaskStartDate" class="control-label"></label>
                    <input asp-for="TaskStartDate" class="form-control" />
                    <span asp-validation-for="TaskStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaskDeadline" class="control-label"></label>
                    <input asp-for="TaskDeadline" class="form-control" />
                    <span asp-validation-for="TaskDeadline" class="text-danger"></span>
                </div>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="Completed">
                    <label class="custom-control-label" for="customSwitch1"> Task Completion</label>
                </div>
                <div class="form-group mt-2">
                    
                    <div class="btn-block btn-group">
                        
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Context.Request.RouteValues["id"]"  class="btn btn-outline-secondary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
                       
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
