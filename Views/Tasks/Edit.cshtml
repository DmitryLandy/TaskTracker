@model BugTracker.Models.Tasks

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="offset-md-3 row navbar navbar-expand navbar-light bg-light" style="max-width:40%">
    <h1 class="text-success">Edit Task</h1>
</nav>

<div class="offset-md-3 row" style="background-color:white; max-width:40%">
    <div class=" col m-3" >
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskID" />
            <div class="form-group">
                <input type="hidden" asp-for="ProjectID" class="form-control" value="@Model.ProjectID" />
            </div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <textarea asp-for="TaskDescription" class="form-control"></textarea>
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskStartDate" class="control-label"></label>
                <input asp-for="TaskStartDate" class="form-control" />
                <span asp-validation-for="TaskStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDeadline" class="control-label"></label>
                <input asp-for="TaskDeadline" class="form-control" />
                <span asp-validation-for="TaskDeadline" class="text-danger"></span>
            </div>
            <div class="custom-control custom-switch">

                <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="Completed">
                <label class="custom-control-label" for="customSwitch1"> Task Completion</label>

            </div>
            <br />

            <div class="form-group btn-group btn-block">                
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectID.ToString()" class="btn btn-outline-secondary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
